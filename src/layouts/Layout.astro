---
import '@fontsource/open-sans/400.css';
import '@fontsource/open-sans/600.css';
import '@fontsource/open-sans/700.css';
import '@fontsource/big-shoulders-inline-text/700.css';
import '@fontsource/big-shoulders-inline-text/900.css';

import { site } from '../env';

import Nav from '../components/Nav.astro';
import Footer from '../components/Footer.astro';
import StyleSwitcher from '../components/StyleSwitcher.astro';

interface Props {
  title?: string;
  description: string;
  pathname: string;
}

const { title, description, pathname } = Astro.props;

const titlePrefix = title ? `${title} â€“ ` : '';
---

<!doctype html>
<html lang="de">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <link rel="sitemap" href="/sitemap-index.xml" />
    <meta name="generator" content={Astro.generator} />
    <meta name="designer" content="Anna Riemer" />
    <meta name="developer" content="Melvin Focke" />
    <title>{titlePrefix + 'FM Veranstaltungstechnik'}</title>
    <meta name="description" content={description} />

    <meta property="og:title" content={titlePrefix + 'FM Veranstaltungstechnik'} />
    <meta property="og:description" content={description} />
    <meta property="og:type" content="website" />
    <meta property="og:url" content={site + pathname} />
    <meta property="og:image" content={site + '/og-image.jpg'} />
    <meta property="og:locale" content="de_DE" />
  </head>
  <body>
    <Nav />
    <main>
      <slot />
    </main>
    <Footer />
    <StyleSwitcher />
  </body>
</html>
<style is:global>
  :root {
    color-scheme: dark;
    scroll-behavior: smooth;
    scroll-padding-top: 3rem;

    --max-width: 63rem;
    --section-padding: 1.5rem;
    --content-border: 1.5rem;
    --color-black: #000000;
    --color-black-transparent: #00000000;
    --color-white: #ffffff;
    --color-white-100: #ffffffbf;
    --color-blue-700: #4b4f6c1a;
    --color-blue-800: #4b4f6cc7;
    --color-blue-900: #000736;
    --color-gray-100: #fdfdfd;
    --color-gray-700: #83838346;
    --color-gray-900: #121421;
  }

  @media screen and (max-width: 557px) {
    :root {
      font-size: calc(8 / 9 * 100%);
    }
  }

  body {
    background: var(--color-black);
    margin: 0;
    overflow-x: hidden;
  }

  main {
    width: 100%;
  }

  body,
  button {
    font-family: 'Open Sans', sans-serif;
    line-height: 1.35;
    color: var(--color-white);
    font-size: 1.125rem;
    font-weight: 400;
  }

  h1,
  h2,
  h3,
  h4,
  h5,
  h6 {
    font-family: 'Big Shoulders Inline Text', sans-serif;
    line-height: 1.1;
    text-transform: uppercase;
    margin: 0;
    text-align: center;
  }

  h1 {
    font-size: var(--h1-font-size, 2.8rem);
    letter-spacing: var(--letter-spacing, 0.07ch);
    font-weight: 900;
  }

  h2 {
    font-size: var(--h2-font-size, 2.3rem);
    letter-spacing: var(--letter-spacing, 0.07ch);
    font-weight: 900;
  }

  h3 {
    font-size: 1.625rem;
    font-weight: 700;
  }

  h4 {
    font-size: 1.25rem;
    font-weight: 700;
  }

  p {
    margin: 0;
  }
</style>
