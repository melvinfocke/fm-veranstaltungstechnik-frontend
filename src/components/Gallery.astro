---
import type { ImageMetadata } from 'astro';

import { Picture } from 'astro:assets';

interface Props {
  sources: ImageMetadata[];
}

const { sources } = Astro.props;
---

<section id="galerie">
  <h2>Galerie</h2>
  <div class="content-wrapper">
    {
      sources.map((source, i) => (
        <Picture src={source} alt={`Gallery Image ${i + 1}`} widths={[520, 780, 1040, 1300]} />
      ))
    }
  </div>
</section>

<style>
  section {
    max-width: calc(var(--max-width) + var(--content-border) * 2);
    width: 100%;
    margin-inline: auto;
    background: radial-gradient(var(--color-blue-900), var(--color-black));
  }
  h2 {
    padding-block: 3rem;
    margin-inline: var(--content-border);
  }
  .content-wrapper {
    position: relative;
    display: flex;
    gap: 0.5rem;
    justify-content: center;
    flex-wrap: wrap;
    margin-inline: var(--content-border);
  }
  a {
    position: absolute;
    right: 0;
    top: -2rem;
    color: inherit;
    text-decoration: none;
    font-size: 0.75em;
  }
  img {
    display: block;
    width: 15.375rem;
    height: 22rem;
    object-fit: cover;
    outline: 1px solid var(--color-gray-700);
    border-radius: 1rem;
  }

  @media screen and (max-width: 565px) {
    img {
      width: 100%;
      height: auto;
      aspect-ratio: 3 / 2;
      border-radius: 0;
    }

    img:first-of-type {
      border-radius: 1rem 1rem 0 0;
    }

    img:last-of-type {
      border-radius: 0 0 1rem 1rem;
    }
  }
</style>
