---
import { Image } from 'astro:assets';

interface Props {
  iconSource: ImageMetadata;
  iconAlt: string;
  text: string;
}

const { iconSource, iconAlt, text } = Astro.props;
---

<div>
  <Image src={iconSource} alt={iconAlt} />
  <div>
    <p set:html={text} />
  </div>
</div>

<style>
  div {
    width: 14.625rem;
  }

  img {
    filter: invert(1);
    height: 4.5rem;
    width: 4.5rem;
  }

  p {
    margin-top: 0.5rem;
    font-size: 1rem;
  }
  @media (min-width: 400px) {
    div {
      width: 10rem;
    }
  }

  @media (min-width: 524px) {
    div {
      width: 14.625rem;
    }
  }
</style>
