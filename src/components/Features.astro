---
import { Image } from 'astro:assets';
import image0 from '../assets/cool-background.jpg';
---

<section>
  <h2>Features</h2>
  <Image src={image0} alt="Cool Background" class="background-image" />
  <div class="content-wrapper">
    <slot />
  </div>

  <style>
    section {
      width: 100%;
      max-width: calc(var(--max-width) + var(--content-border) * 2);
      margin-inline: auto;
      text-align: center;
      position: relative;
    }

    section::before,
    section::after {
      content: '';
      position: absolute;
      width: 100%;
      height: 4rem;
      left: 0;
      z-index: 1;
    }

    section::before {
      top: 0;
      background: linear-gradient(var(--color-black), var(--color-black-transparent));
    }

    section::after {
      bottom: 0;
      background: linear-gradient(var(--color-black-transparent), var(--color-black));
    }

    h2 {
      font-size: 0;
    }

    .background-image {
      width: 100%;
      height: 47rem;
      object-fit: cover;
      filter: brightness(0.75);
    }

    .content-wrapper {
      max-width: var(--max-width);
      padding-inline: var(--content-border);
      width: calc(100% - var(--content-border) * 2);
      display: flex;
      justify-content: center;
      flex-wrap: wrap;
      position: absolute;
      gap: 1.5rem;
      top: 50%;
      transform: translateY(-50%);
    }

    @media (min-width: 400px) {
      .content-wrapper {
        gap: 2.5rem;
      }

      .background-image {
        height: 28rem;
      }
    }

    @media (min-width: 524px) {
      .content-wrapper {
        gap: 1.5rem;
      }
      .background-image {
        height: 28rem;
      }
    }

    @media (min-width: 1073px) {
      .background-image {
        height: 19rem;
        flex-wrap: nowrap;
      }
    }
  </style>
</section>
